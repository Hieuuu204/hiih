<body>

<div class="scene">
  <div class="world" id="world">
    <div class="stars" id="stars"></div>
    <div class="rain-container" id="rainContainer"></div>
    <div class="shooting-stars" id="shootingStars"></div>
  </div>
</div>

<script>
  // ===== SAO =====
  const starContainer = document.getElementById('stars');
  const numStars = window.innerWidth < 500 ? 50 : 100;
  for (let i = 0; i < numStars; i++) {
    const star = document.createElement('div');
    star.classList.add('star');
    star.style.top = Math.random() * window.innerHeight + 'px';
    star.style.left = Math.random() * window.innerWidth + 'px';
    star.style.animationDelay = Math.random() * 2 + 's';
    starContainer.appendChild(star);
  }

  // ===== CHá»® RÆ I =====
  const lines = [
    "ðŸŒŸ ChÃ o má»«ng Ä‘áº¿n vá»›i .NET!",
    "ðŸš€ SÃ¡ng táº¡o â€“ Hiá»‡n Ä‘áº¡i â€“ CÃ´ng nghá»‡.",
    "ðŸ’¡ KhÃ¡m phÃ¡ tháº¿ giá»›i pháº§n má»m.",
    "ðŸ”§ LÃ m chá»§ tÆ°Æ¡ng lai vá»›i láº­p trÃ¬nh.",
    "ðŸ›°ï¸ C# vÃ  .NET â€“ CÃ´ng cá»¥ tÆ°Æ¡ng lai.",
    "ðŸ§  Code lÃ  logic sá»‘ng Ä‘á»™ng.",
    "âœ¨ CÃ´ng nghá»‡ cháº¡m tá»›i vÃ¬ sao."
  ];

  const container = document.getElementById('rainContainer');

  function createFallingLine(text) {
    const div = document.createElement('div');
    div.classList.add('rain-text');
    div.textContent = text;
    div.style.left = Math.random() * (window.innerWidth - 100) + 'px';
    const duration = 4 + Math.random() * 3;
    div.style.animationDuration = duration + 's';
    container.appendChild(div);
    setTimeout(() => container.removeChild(div), duration * 1000);
  }

  setInterval(() => {
    const line = lines[Math.floor(Math.random() * lines.length)];
    createFallingLine(line);
  }, 800);

  // ===== XOAY GÃ“C NHÃŒN THEO Cáº¢M á»¨NG =====
  const world = document.getElementById('world');
  let rotateX = 0;
  let rotateY = 0;
  let lastX = 0;
  let lastY = 0;
  let isTouching = false;

  document.addEventListener("touchstart", (e) => {
    isTouching = true;
    lastX = e.touches[0].clientX;
    lastY = e.touches[0].clientY;
  });

  document.addEventListener("touchmove", (e) => {
    if (!isTouching) return;
    const deltaX = e.touches[0].clientX - lastX;
    const deltaY = e.touches[0].clientY - lastY;
    rotateY += deltaX * 0.1;
    rotateX -= deltaY * 0.1;
    world.style.transform = `rotateX(${rotateX}deg) rotateY(${rotateY}deg)`;
    lastX = e.touches[0].clientX;
    lastY = e.touches[0].clientY;
  });

  document.addEventListener("touchend", () => {
    isTouching = false;
  });

  // ===== SAO BÄ‚NG NGáºªU NHIÃŠN =====
  const shootingStarsContainer = document.getElementById('shootingStars');

  function createShootingStar() {
    const star = document.createElement('div');
    star.classList.add('shooting-star');

    // Vá»‹ trÃ­ báº¯t Ä‘áº§u: ngáº«u nhiÃªn á»Ÿ phÃ­a trÃªn bÃªn trÃ¡i hoáº·c trÃªn bÃªn pháº£i
    const startX = Math.random() * window.innerWidth * 0.5;
    const startY = Math.random() * window.innerHeight * 0.5;

    star.style.top = startY + 'px';
    star.style.left = startX + 'px';

    // Thá»i gian bay ngáº«u nhiÃªn tá»« 0.7 Ä‘áº¿n 1.2 giÃ¢y
    const duration = 700 + Math.random() * 500;
    star.style.animationDuration = duration + 'ms';

    shootingStarsContainer.appendChild(star);

    star.style.animationName = 'shooting';

    // Sau khi káº¿t thÃºc, xÃ³a pháº§n tá»­ Ä‘á»ƒ tiáº¿t kiá»‡m bá»™ nhá»›
    star.addEventListener('animationend', () => {
      shootingStarsContainer.removeChild(star);
    });
  }

  // Táº¡o sao bÄƒng ngáº«u nhiÃªn má»—i 1.5 Ä‘áº¿n 3 giÃ¢y
  function shootingStarLoop() {
    createShootingStar();
    setTimeout(shootingStarLoop, 1500 + Math.random() * 1500);
  }
  shootingStarLoop();

</script>

</body>
