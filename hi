  <style>
    html, body {
      margin: 0;
      padding: 0;
      overflow: hidden;
      background: #000;
      height: 100%;
      font-family: Arial, sans-serif;
    }

    .scene {
      width: 100%;
      height: 100%;
      perspective: 800px;
      overflow: hidden;
    }

    .world {
      width: 100%;
      height: 100%;
      transform-style: preserve-3d;
      transition: transform 0.1s linear;
      position: relative;
    }

    .stars, .rain-container, .shooting-stars {
      position: absolute;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      pointer-events: none; /* khÃ´ng cháº¯n sá»± kiá»‡n cáº£m á»©ng */
    }

    .star {
      position: absolute;
      width: 1.5px;
      height: 1.5px;
      background: white;
      border-radius: 50%;
      opacity: 0.6;
      animation: twinkle 2s infinite ease-in-out;
    }

    @keyframes twinkle {
      0%, 100% { opacity: 0.2; transform: scale(1); }
      50% { opacity: 1; transform: scale(1.4); }
    }

    .rain-text {
      position: absolute;
      white-space: nowrap;
      color: #ffffff;
      font-size: clamp(14px, 2.5vw, 18px);
      text-shadow: 0 0 6px #ffffff;
      animation: fall linear forwards;
    }

    @keyframes fall {
      from { top: -50px; opacity: 1; }
      to   { top: 100vh; opacity: 0.2; }
    }

    /* Sao bÄƒng */
    .shooting-star {
      position: absolute;
      width: 100px;
